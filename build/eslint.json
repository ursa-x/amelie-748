{
	"extends": "airbnb-base",
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"no-tabs": "off",
		"no-return-await": "off",
		"one-var": [
			"warn",
			{
				"initialized": "always"
			}
		],
		"comma-dangle": [
			"error",
			"never"
		],
		"class-methods-use-this": "off",
		"no-underscore-dangle": "off",
		"arrow-body-style": ["warn", "as-needed", {
			"requireReturnForObjectLiteral": false
		}]
	}
}
